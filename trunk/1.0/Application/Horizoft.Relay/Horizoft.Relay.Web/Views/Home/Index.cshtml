                /* background-color: rgba(0, 128, 0, 0.8);*/
                /*background-image: url('../../Images/Freez_green.png');*/
                box-shadow: 0px 4px 8px 0px rgba(0,0,0,0.2), 0px 6px 20px 0px rgba(0,0,0,0.19);
            }

        .operate-hidden {
            display: none;
        }
