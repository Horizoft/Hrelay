    <style>
        body {
            background: #2c4a65;
            padding: 50px;
            font-family: "Arial","HelveticaNeue", "Helvetica Neue", "Helvetica", "sans-serif";
           
        }
        .row {
            width: 250px;
            height: auto;
            margin: auto;
            margin-top: 10%;
        }
        .avatar{
            width: 90%;
            margin: auto;
            position: relative;

        }
        .col-md-8 {
            padding: 10px;
            font-size: 12px;
            width: 250px;
        }

        .col-md-10 input[type="text"] {
            width:100%;
            border: none;
            background: #fff;
            font-size: 12px;
            font-weight: 600;
            display: block;
            height: 30px;
            outline: none;
           
            /*width: calc(100%);*/
            margin: auto;
            padding: 6px 12px 6px 12px;
            
        }
   
        /*.bar {
            width: 100%;
            height: 1px;
            background: #fff;
        }

        .bar i {
             width: 90%;
             margin: auto;
             height: 1px;
             display: block;
             background: #d1d1d1;
         }*/
        .col-md-10 input[type="password"] {
            width: 100%;
            border: none;
            background: #fff;
            font-size: 12px;
            font-weight: 600;
            display: block;
            height: 30px;
            outline: none;
            /*width: calc(100%-24);*/
            margin: auto;
            padding: 6px 12px 6px 12px;
            
        }

        .col-md-offset-2 input[type="submit"] {
            width: 110%;
            background: #619cc6;
            text-decoration: none;
            border: none;
            color: white;
            /*margin-top: 15px;*/
            padding-top: 10px;
            padding-bottom: 10px;
            outline: none;
            font-size: 13px;
            border-bottom: 3px solid #165880;
            cursor: pointer;
            font-weight: bold;
        }
        .col-md-offset-2 input[type="submit"]:hover {
            background-color: #a1d1ef;
            color: black;
            font-weight: bold;
            transition-duration:0.6s;
        }

        .text-danger {
            padding:3px 0 0 3px;
            color: #999;
            max-height: 0;
            transition: 0.28s;
          
            color: red;
            font-style: italic;
        }
        .validation-summary-errors text-danger{
            text-align:center;
        } 
        .checkbox {
            margin: 10px 0 10px 0;
            color: white;
        }
        .input[type="checkbox" i] {
            margin: 3px 3px 3px 4px;
        }

        /*--------------Create.cshtml page-----------------*/
        .nav {
            height:50px;
           
            background: rgb(23, 115, 169);
            color: #fff;
            font-size: 22px;
            font-weight: 400;
            /*Edit shadow head nav*/
            box-shadow: 3px 1px 10px rgba(37,37,37,0.66);
            position: static;
            
        }
            .nav h4 {
                padding: 15px 0px 0px 50px;
            }
        .form-horizontal-create{
            text-align:center;
            height:100vh;
           
            
        }
        .form-group-create {
            background-color: white;
            display: inline-block;
            margin: 2rem;
            padding: 30px;
            box-shadow: 0px 10px 20px rgba(0,0,0,0.19), 0px 6px 6px rgba(0,0,0,0.23);
        }
        /*----------------------------*/
        
        .form-input {
            padding: 10px;
            color: rgba(0, 0, 0, 0.5);
            font-size: 13px;
        }

       .table {
            white-space: normal;
            line-height: normal;
            font-weight: normal;
            font-size: medium;
            font-style: normal;
            color: -internal-quirk-inherit;
            text-align: start;
            font-variant: normal normal;
        }

        .table {
            display: table;
            border-collapse: separate;
            border-spacing: 2px;
            border-color: grey;
        }
        .form-input td{
            padding:10px;
        }
        .form-input td label {
            padding: 10px;
            display: table-cell;
            vertical-align: inherit;
        }

        .form-input td input {
            width: 400px;

            padding: 10px;
            font-size: 13px;
        }
        .form-input tr {
            display: table-row;
            vertical-align: inherit;
            border-color: inherit;
        }

    

        .col-md-offset-2-create{
            padding: 10px;
        } 
        .col-md-offset-2-create input[type="submit"] {
            background-color: #ffffff;
            border: 2px solid #4CAF50;
            color: black;
            padding: 9px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 13px;
            margin: 4px 2px;
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
            cursor: pointer;
        }
        .col-md-offset-2-create input[type="submit"]:hover {
            background-color: #4CAF50;
            color:white;
        }

       .col-md-offset-2-create a {
            background-color: #ffffff;
            border: 2px solid #1773a9;
            color: black;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 13px;
            margin: 4px 2px;
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
            cursor: pointer;
        }
        .col-md-offset-2-create a:hover {
             background-color: #1773a9;
             color: white;
        }
        /*----------------------------*/
    </style>

