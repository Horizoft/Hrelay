        .col-md-10 input[type="password"] {
            border: none;
            background: #fff;
            font-size: 12px;
            font-weight: 600;
            display: block;
            height: 30px;
            outline: none;
            width: calc(100% - 24px);
            /*width: calc(100%);*/
            margin: auto;
            padding: 6px 12px 6px 12px;
            border-radius: 7px 7px 7px 7px;
        }

        .col-md-offset-2 input[type="submit"] {
            width: 100%;
            border-radius: 7px;
            background: #619cc6;
            text-decoration: none;
            border: none;
            color: white;
            /*margin-top: 15px;*/
            padding-top: 10px;
            padding-bottom: 10px;
            outline: none;
            font-size: 13px;
            border-bottom: 3px solid #165880;
            cursor: pointer;
            font-weight: bold;
        }
        .col-md-offset-2 input[type="submit"]:hover {
            background-color: #a1d1ef;
            color: black;
            font-weight: bold;
        }

        .text-danger {
            padding:3px 0 0 3px;
            color: #999;
            max-height: 0;
            transition: 0.28s;
          
            color: red;
            font-style: italic;
        }
        .validation-summary-errors text-danger{
            text-align:center;
        } 
        .checkbox {
            margin: 10px 0 10px 0;
            color: white;
        }
        .input[type="checkbox" i] {
            margin: 3px 3px 3px 4px;
        }




    </style>

