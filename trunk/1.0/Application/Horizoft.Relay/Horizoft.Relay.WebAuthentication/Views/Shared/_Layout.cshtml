    <style>


        body {
            background: #2c4a65;
            padding: 50px;
            font-family: "Arial","HelveticaNeue", "Helvetica Neue", "Helvetica", "sans-serif";
           
        }
        .row {
            width: 250px;
            height: auto;
            margin: auto;
            margin-top: 10%;
        }
        .avatar{
            width: 90%;
            margin: auto;
            position: relative;

        }
        .col-md-8 {
            padding: 10px;
            font-size: 12px;
            width: 250px;
        }

        .col-md-10 input[type="text"] {
            border: none;
            background: #fff;
            font-size: 12px;
            font-weight: 600;
            display: block;
            height: 30px;
            outline: none;
            width: calc(100% - 24px);
            /*width: calc(100%);*/
            margin: auto;
            padding: 6px 12px 6px 12px;
            border-radius: 7px 7px 7px 7px;
        }
   
        /*.bar {
            width: 100%;
